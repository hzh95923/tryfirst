<%- include('components/header') %>
<style type="text/css">
	.progress{display: none;}
</style>
<div class="container" style="margin-top: 300px;">
	<div class="row">
		<div class="col-xs-6 col-xs-offset-3">
			<form role="form" id="formupload">
				<div class="form-group row">
					<label for="exampleInputFile" class="col-sm-3 control-label">选择上传文件：</label>
					<input type="file" name="upfiles" class="upfiles" class="col-sm-9">
				</div>
				<div class="form-group progress row">
					<div class="progress-bar progress-bar-success progress-bar-striped" role="progressbar" aria-valuemin="0" aria-valuemax="100" style="width: 0%">
						0%
					</div>
				</div>
				<hr />
				<button id="submit" type="button" class="btn btn-default col-xs-offset-2">Submit</button>
			</form>
		</div>
	</div>
</div>
<script src="/js/jquery.min.js" type="text/javascript" charset="utf-8"></script>
<script type="text/javascript">
	$(function() {
		$('#submit').click(function() {
			var fd = new FormData($('#formupload')[0]);
			$.ajax({
				type: "post",
				url: "/test",
				// 告诉jQuery不要去处理发送的数据
				processData: false,
				// 告诉jQuery不要去设置Content-Type请求头
				contentType: false,
				data: fd,
				async: true,
				dataType:"json",
				success: function(data) {
					console.log(data);
				}
			});
			var time = setInterval(function() {

			}, 1000);
			console.log($('.upfiles').val())
			if($('.upfiles').val()){
				getProgress("first");
			}
			
		});

		function getProgress(first) {
			$.ajax({
				type: "post",
				url: "/test/doneprogress",
				data:{'firsttime':first},
				async: true,
				dataType:"json",
				success: function(data) {
					if(data < 100) {
						setTimeout(getProgress, 3000);
					}
					$('.progress').slideDown();
					$('.progress-bar').width(data+"%").text(data+"%");
				}
			});
		}
	});
</script>
